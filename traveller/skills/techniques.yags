    <advantage name="Grav tech" type="technique">
        <cost points="4"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Experience with repairing grav thrusters.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have experience with fixing and designing
                grav technology such as reactionless thrusters,
                artificial gravity and the like.
            </para>
        </description>
    </advantage>

    <advantage name="Spaceships" type="technique">
        <cost points="4"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Experience with repairing spacecraft.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are experienced with fixing, maintaining and designing
                spacecraft - from orbital shuttles to jump capable star
                cruisers. When used with the appropriate skills, this
                technique enables you to improvise fixes for spaceships,
                and make improvements.
            </para>
        </description>
    </advantage>

    <advantage name="Jump drive" type="technique">
        <cost points="6"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <prerequisite>Spaceships</prerequisite>
        <short>Experience with repairing jump drives.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Experience with fixing and building jump drives.
            </para>
        </description>
    </advantage>

    <advantage name="Power plants" type="technique">
        <cost points="4"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Experience with repairing fusion and fission plants.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Experience with fixing, maintaining or building fusion
                power plants, such as those commonly found on most
                space craft.
            </para>
        </description>
    </advantage>

    <advantage name="Sensors" type="technique">
        <cost points="2"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <skill name="Computer operation"/>
        <short>Experience with repairing sensors.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Experience with fixing, maintaining or building sensor
                and communication systems.
            </para>
        </description>
    </advantage>

    <advantage name="Computers" type="technique">
        <cost points="2"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Experience with repairing computers.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Experience with fixing, maintaining or building the physical
                aspect of computer systems.
            </para>
        </description>
    </advantage>

    <advantage name="Medical" type="technique">
        <cost points="2"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <skill name="Computer operation"/>
        <short>Experience with repairing medical equipment.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Experience with fixing, maintaining or building medical
                systems (life support, scanners etc).
            </para>
        </description>
    </advantage>


    <advantage name="Nuclear physics" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>
        <short>The study of nuclear physics.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of nuclear physics, and
                have a good understanding of how fusion and fission
                reactions occur and how atoms behave.
            </para>
        </description>
    </advantage>

    <advantage name="Quantum physics" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>
        <short>The study of quantum physics.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of quantum physics,
                including the behaviour of particles at the quantum
                scales and the very basics of quantum gravity. If
                you also have <e>Computer hacking</e> you probably
                understand quantum computers, and knowledge of
                <e>Cryptography</e> will enable you to understand
                quantum encryption.
            </para>
        </description>
    </advantage>

    <advantage name="Quantum gravity" type="technique">
        <cost points="6"/>
        <skill name="Physics"/>
        <prerequisite>Quantum physics</prerequisite>
        <short>The study of quantum gravity.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of quantum gravity, how
                it describes the universe, and a good theoretical
                understanding of how grav technology really works.
            </para>
        </description>
    </advantage>

    <advantage name="Relativity" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>
        <short>The study of relativity.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of relativity.
            </para>
        </description>
    </advantage>

    <advantage name="Jump physics" type="technique">
        <cost points="6"/>
        <skill name="Physics"/>
        <prerequisite>Relativity</prerequisite>
        <short>The study of jump space.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of jump space, and know
                how (at the theoretical level) jump drives work.
            </para>
        </description>
    </advantage>

    <advantage name="Biochemistry" type="technique">
        <cost points="4"/>
        <skill name="Chemistry"/>
        <short>Advanced knowledge of biochemistry.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of biochemistry.
            </para>
        </description>
    </advantage>

    <advantage name="Genetics" type="technique">
        <cost points="4"/>
        <skill name="Biology"/>
        <prerequisite>Biochemistry</prerequisite>
        <short>Advanced knowledge of genetics.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have a detailed knowledge of genetics. You
                understand the theory of DNA and genetic inheritance,
                as well as having experience in identifying and
                extracting DNA, and making modifications to the
                genetic information of living creatures.
            </para>
        </description>
    </advantage>

    <advantage name="Bioengineering" type="technique">
        <cost points="6"/>
        <skill name="Biology"/>
        <prerequisite>Genetics</prerequisite>
        <short>Advanced knowledge of cloning and tissue engineering.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Building on your knowledge of genetics, you have
                considerable experience with the design and growth
                of artificial biological organisms, including clones,
                specifically bred tissues and bio-enhancements.
                Much of what is possible is considered unethical in
                the Third Imperium.
            </para>
        </description>
    </advantage>

    <advantage name="Biowarfare" type="technique">
        <cost points="4"/>
        <skill name="Biology"/>
        <prerequisite>Biochemistry</prerequisite>
        <short>Knowledge of biological warfare.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are experienced in the field of biological warfare,
                and have a good understanding of how biological agents
                can be 'weaponised', how they disperse through the
                environment, and how to combat them.
            </para>

            <para>
                Can be combined with <e>Bioengineering</e> to make
                viruses which target those with a specific genetic
                identifier (races, families or even individuals).
            </para>
        </description>
    </advantage>

    <advantage name="Xenobiology" type="technique">
        <cost points="4"/>
        <skill name="Biology"/>
        <short>Knowledge of alien biological systems.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are well read on a variety of alien biologies, and do
                not suffer penalties for having to deal with unusual
                xenomorphs. A truly exceptional biology might be difficult
                to understand at first, but you'll be far better equipped
                to deal with it than someone without your expansive
                knowledge.
            </para>
        </description>
    </advantage>

    <advantage name="Cybernetics" type="technique">
        <cost points="4"/>
        <skill name="Medicine"/>
        <short>Knowledge of cybernetics.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are experienced in the medical field of cybernetics.
            </para>
        </description>
    </advantage>

    <advantage name="Diagnosis" type="technique">
        <cost points="2"/>
        <skill name="Medicine"/>
        <short>Diagnosing an illness.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are especially experienced at diagnosing the cause
                of a patient's illness or injury based on knowledge of
                the symptoms.
            </para>
        </description>
    </advantage>

    <advantage name="Poisons" type="technique">
        <cost points="4"/>
        <skill name="Medicine"/>
        <short>Knowledge of poisons.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have specific knowledge of poisons, including both on
                how to cure them, and how to administer them.
            </para>
        </description>
    </advantage>

    <advantage name="Disease" type="technique">
        <cost points="4"/>
        <skill name="Medicine"/>
        <short>Knowledge of diseases.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have specific knowledge of diseases and how they
                effect people. You are skilled at curing them (at least
                those there are cures for).
            </para>
        </description>
    </advantage>

    <advantage name="Swimming" type="technique">
        <cost points="2"/>
        <skill name="Athletics"/>
        <short>You can swim.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have trained at swimming.
            </para>
        </description>
    </advantage>

    <advantage name="Underwater swimming" type="technique">
        <cost points="4"/>
        <skill name="Athletics"/>
        <prerequisite>Swimming</prerequisite>
        <short>You can swim underwater.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have trained at swimming underwater, and only have to
                make fatigue checks at twice the normal interval.
            </para>
        </description>
    </advantage>

    <advantage name="Aircraft" type="technique">
        <cost points="4"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Repairing and building aircraft.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have experience with repairing aircraft.
            </para>
        </description>
    </advantage>

    <advantage name="Boats" type="technique">
        <cost points="2"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Repairing and building boats.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have experience with repairing boats.
            </para>
        </description>
    </advantage>

    <advantage name="Cars" type="technique">
        <cost points="2"/>
        <skill name="Mechanics"/>
        <skill name="Engineering"/>
        <short>Repairing and building cars.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You have experience with repairing cars and other wheeled
                ground vehicles.
            </para>
        </description>
    </advantage>

    <advantage name="Improved psionic block" type="technique">
        <cost points="4"/>
        <skill name="Psionic Block"/>

        <short>Use psionic block whilst doing other things.</short>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are experienced enough with using a <e>psionic block</e>
                that you can almost perform it unconsciously. You still have
                to think about it, but the penalty to other skills is only
                -10 whilst doing it, and somebody in conversation with you
                may notice that you seem somewhat distracted.
            </para>
        </description>
    </advantage>

    <advantage name="Unconscious block" type="technique">
        <cost points="8"/>
        <skill name="Psionic Block"/>
        <prerequisite>Improved psionic block</prerequisite>

        <short>Use psionic block unconsciously.</short>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are able to keep up a permanent psionic block, even
                whilst asleep. You suffer no penalty from using it whilst
                performing other actions, and it will not be noticed by
                other people.
            </para>
        </description>
    </advantage>

    <advantage name="Brainwashing" type="technique">
        <cost points="4"/>
        <skill name="Psychology"/>
        <short>The art of altering personalities..</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You know how to alter a person's personality to make them
                think and act in a certain way. Outlawed in the Imperium,
                it is however sometimes taught by religious cults,
                terrorist organisations and, it is rumoured, some black ops
                agencies within the Imperial military.
            </para>
        </description>
    </advantage>

    <advantage name="Propaganda" type="technique">
        <cost points="4"/>
        <skill name="Psychology"/>
        <skill name="Marketing"/>
        <short>Selling ideas to a population.</short>
        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                You are skilled in the art of persuading entire populations
                of an idea.
            </para>
        </description>
    </advantage>

    <advantage name="System administration" type="technique">
        <cost points="2"/>
        <skill name="Computer operation"/>
        <skill name="Computer hacking"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Provides experience in the maintenance and design of a
                particular type of computer system. Allows networks to
                be configured and optimised, users to be managed and
                file systems and services to be configured.
            </para>

            <para>
                In the modern world, this would need to be taken once
                for each of UNIX/Linux, Microsoft Windows, OS/360, VMS
                etc. All subtypes are covered. Having this technique
                halves the difficulties of any <e>Computer operation</e>
                or <e>Computer hacking</e> tasks.
            </para>
        </description>
    </advantage>

    <advantage name="Computer intrusion" type="technique">
        <cost points="4"/>
        <skill name="Computer hacking"/>

        <prerequisite>System administration</prerequisite>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of how to break security on computer
                systems, gain passwords and otherwise compromise a
                system's security. If you have this technique, then
                you can halve the difficulty of any tasks related to
                trying to compromise the security of a computer system.
            </para>
        </description>
    </advantage>

    <advantage name="Computer security" type="technique">
        <cost points="4"/>
        <skill name="Computer hacking"/>

        <prerequisite>System administration</prerequisite>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of how to secure a computer network.
            </para>
        </description>
    </advantage>

    <advantage name="Cryptanalysis" type="technique">
        <cost points="4"/>
        <skill name="Computer hacking"/>
        <skill name="Cryptography"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of encryption and decryption software and
                methodology. Experience with such makes it much easier
                when trying to access encrypted data.
            </para>
        </description>
    </advantage>

    <advantage name="Computer programming" type="technique">
        <cost points="4"/>
        <skill name="Computer hacking"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of and experience with programming a computer
                system. Needs to be taken for each type of computer
                platform that can be programmed. If known, it halves
                the difficulty of programming related tasks.
            </para>
        </description>
    </advantage>


</advantages>



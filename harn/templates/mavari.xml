<?xml version="1.0"?>
<character-templates>

<character-template name="Shek-Pvar Mavari">

    <description>
		A player character Shek-Pvar starts with the following
		character template. Since training is pretty standard
		across all convocations and chantries, all Shek-Pvar
		start with the same package of skills.
		<br/>
		The youngest age is normally 21. A Shek-Pvar must
		take the status advantage, as well as literacy. They
		must also take a duty (the Pvaric code) as a
		disadvantage.
		<br/>
		For starting characters, spells may be purchased at a
		cost of one experience point per point of skill, so a
		skill of 4 in a spell, costs only 4 points (rather than
		10).
    </description>

	<attributes points="48">
		<strength score="2" weight="1"/>
		<stamina score="4" weight="6"/>
		<agility score="2" weight="1"/>
		<dexterity score="2" weight="1"/>
		<perception score="3" weight="3"/>
		<intelligence score="5" weight="9"/>
		<charisma score="3" weight="3"/>
		<will score="4" weight="6"/>
	</attributes>

	<advantages points="18">
		<advantage name="attributes" cost="+8"/>
		<advantage name="literate" cost="+2"/>
		<advantage name="social status" cost="+1"/>
		<advantage name="experience" score="10pts" cost="+5"/>
		<advantage name="duty" cost="-4"/>
		<advantage name="animal enmity" cost="-2"/>
	</advantages>

	<skills>
		<group name="Talents" type="talents">
			<skill name="Athletics" score="1" weight="1"/>
			<skill name="Awareness" score="3" weight="6"/>
			<skill name="Brawl" score="1" weight="1"/>
			<skill name="Charm" score="1" weight="1"/>
			<skill name="Guile" score="3" weight="6"/>
			<skill name="Sleight" score="2" weight="3"/>
			<skill name="Stealth" score="2" weight="3"/>
			<skill name="Throw" score="2" weight="3"/>
		</group>

		<group name="Common Knowledges" type="knowledges">
			<skill name="Area lore" score="2" weight="1"/>
			<skill name="Folk lore" score="2" weight="1"/>
			<skill name="Speak own" score="4" weight="0"/>
			<skill name="Scribe own" score="4" weight="0"/>
		</group>

		<group name="Skills at age 16" type="age16">
			<skill name="Pvaric Lore" score="4" weight="9"/>
			<skill name="Astrology" score="2" weight="3"/>
			<skill name="Primary convocation" score="4"/>
			<skill name="Neutral convocation" score="3"/>
			<skill name="Dispel" score="2"/>
			<skill name="Attune (Primary)" score="2"/>
			<skill name="Spell I" score="2"/>
			<skill name="Spell II" score="2"/>
			<skill name="Spell III" score="2"/>
			<skill name="Spell IV" score="1"/>
		</group>

        <group name="Skills at age 21" type="age21">
			<skill name="Spell I" score="4"/>
			<skill name="Spell II" score="4"/>
			<skill name="Spell III" score="3"/>
			<skill name="Spell IV" score="2"/>
			<skill name="Focus (Primary)" score="1"/>
			<skill name="Open" score="1"/>
			<skill name="Close" score="1"/>
			<skill name="Store" score="1"/>
        </group>

		<group name="Skills at age 25" type="age25">
			<skill name="Primary convocation" score="5"/>
			<skill name="Spell I" score="5"/>
			<skill name="Spell II" score="5"/>
			<skill name="Spell III" score="4"/>
		</group>

		<group name="Skills at age 30" type="age30">
			<skill name="Neutral convocation" score="4"/>
			<skill name="Attune" score="4"/>
			<skill name="Focus" score="2"/>
			<skill name="Store" score="2"/>
		</group>
	</skills>

	<equipment>
		<item name="12d"/>
		<item name="Knife"/>
	</equipment>
</character-template>


<!--
    TechLevel 10 Military Vehicles.
-->
<equipment xmlns="http://yagsbook.sourceforge.net/xml"
           xmlns:y="http://yagsbook.sourceforge.net/xml/yags">

    <item name="Instellarms Light Grav Tank">
        <category>Vehicle</category>
        <genre>Traveller</genre>
        <techLevel>10</techLevel>
        <legality>1</legality>
        <availability>1</availability>
        <importance>3</importance>

        <short>Old style grav tank.</short>

        <cost units="Cr">4000000</cost>
        <mass>95000000</mass>

        <construction>
            <year>800</year>
            <manufacturer>Instellarms</manufacturer>
        </construction>

        <performance realm="Air">
            <speed>600</speed>
            <acceleration>75</acceleration>
            <altitude>15000</altitude>
            <range>900</range>
        </performance>

        <description>
            <para>
                A cheap and simple design that is popular in many local
                armies because of its ease of support and maintainence.
            </para>
        </description>

        <vehicle xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <attributes size="11" soak="22" move="200" acceleration="120">
                <attribute name="strength" score="57"/>
                <attribute name="health" score="6"/>
                <attribute name="agility" score="3"/>
            </attributes>

            <combat>
                <armour location="Front" score="35"/>
                <armour location="Side" score="25"/>

                <weapon name="Light Fusion Gun">
                    <attack score="20"/>
                    <damage score="70"/>
                    <increment>30</increment>
                    <rof>1</rof><capacity>40</capacity><recoil>0</recoil>
                    <range>
                        <short>500</short>
                        <medium>1000</medium>
                        <long>1500</long>
                    </range>
                    <properties>
                        <missile/><heavy/><vehicle/>
                        <plasma/><explosive score="3"/>
                    </properties>
                </weapon>

                <weapon name="VRF Gauss Cannon, 4mm">
                    <attack score="15"/>
                    <damage score="32"/>
                    <increment>25</increment>
                    <rof>100</rof><capacity>6000</capacity>
                    <recoil>0</recoil>
                    <range>
                        <short>1000</short>
                        <medium>2000</medium>
                        <long>5000</long>
                    </range>
                    <properties>
                        <missile/><firearm/><automatic/><heavy/>
                        <reload score="5"/>
                    </properties>
                </weapon>
            </combat>
        </vehicle>
    </item>

</equipment>



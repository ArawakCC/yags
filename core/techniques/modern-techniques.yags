    <!--
        Athletics.
    -->
    <advantage name="Nuclear physics" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of Nuclear physics.
            </para>
        </description>
    </advantage>

    <advantage name="Quantum mechanics" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of current theories on Quantum mechanics.
            </para>
        </description>
    </advantage>

    <advantage name="Relativity">
        <cost points="4"/>
        <skill name="Physics"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of both special and general relativity.
            </para>
        </description>
    </advantage>

    <advantage name="String theory">
        <cost points="8"/>
        <skill name="Physics"/>

        <prerequisite>Quantum mechanics</prerequisite>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of the various versions of string theory.
            </para>
        </description>
    </advantage>

    <advantage name="Genetics">
        <cost points="4"/>
        <skill name="Biochemistry"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of genetic theory.
            </para>
        </description>
    </advantage>

    <!--
        Computer related techniques.
    -->

    <advantage name="Networking">
        <cost points="4"/>
        <skill name="Hacking"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of how computer networks are configured,
                designed and secured.
            </para>
        </description>
    </advantage>

    <advantage name="Intrusion">
        <cost points="6"/>
        <skill name="Hacking"/>

        <prerequisite>Networking</prerequisite>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of how to break security on computer
                systems, gain passwords and otherwise compromise a
                system's security.
            </para>
        </description>
    </advantage>


</advantages>



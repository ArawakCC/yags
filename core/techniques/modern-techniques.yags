    <!--
        Athletics.
    -->
    <advantage name="Nuclear physics" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of Nuclear physics.
            </para>
        </description>
    </advantage>

    <advantage name="Quantum mechanics" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of current theories on Quantum mechanics.
            </para>
        </description>
    </advantage>

    <advantage name="Relativity" type="technique">
        <cost points="4"/>
        <skill name="Physics"/>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of both special and general relativity.
            </para>
        </description>
    </advantage>

    <advantage name="String theory" type="technique">
        <cost points="8"/>
        <skill name="Physics"/>

        <prerequisite>Quantum mechanics</prerequisite>

        <description xmlns="http://yagsbook.sourceforge.net/xml">
            <para>
                Knowledge of the various versions of string theory.
            </para>
        </description>
    </advantage>

    <advantage name="Genetics" type="technique">
        <cost points="4"/>
        <skill name="Biochemistry"/>


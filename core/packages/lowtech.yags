<?xml version="1.0"?>


<characters xmlns="http://yagsbook.sourceforge.net/xml"
         xmlns:y="http://yagsbook.sourceforge.net/xml/yags">

    <character name="Man-at-arms">
        <description>
            <short>
                The man-at-arms is a professional foot soldier who is not
                noble born. They work full time in their lord's employ, or
                hire themselves out as mercenaries to the highest bidder.
            </short>
        </description>

        <statistics xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <skills>
                <group name="Talents" type="talents">
                    <skill name="Athletics" score="2"/>
                    <skill name="Awareness" score="2"/>
                    <skill name="Brawl" score="3"/>
                    <skill name="Charm" score="2"/>
                    <skill name="Guile" score="2"/>
                    <skill name="Sleight" score="2"/>
                    <skill name="Stealth" score="2"/>
                    <skill name="Throw" score="3"/>
                </group>

                <group name="Knowledges" type="knowledges">
                    <skill name="Speak own" score="4"/>
                    <skill name="Area lore" score="4"/>
                </group>

                <group name="Profession" type="skills">
                    <skill name="Farming" score="2"/>
                </group>

                <group name="Combat" type="skills">
                    <skill name="Bow" score="1"/>
                    <skill name="Weapon and shield" score="4"/>
                    <skill name="Battle" score="2"/>
                    <skill name="Longshaft weapon" score="3"/>
                </group>

                <group name="Other" type="skills">
                    <skill name="Survival" score="1"/>
                    <skill name="First aid" score="2"/>
                </group>
            </skills>
        </statistics>
    </character>


    <character name="Bachelor Knight">
        <description>
            <short>
                The knight bachelor is a noble warrior, who owns no lands
                but who serves another noble lord. They are not mercenaries,
                working for loyalty and honour rather than money.
            </short>
        </description>

        <statistics xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <skills>
                <group name="Talents" type="talents">
                    <skill name="Athletics" score="2"/>
                    <skill name="Awareness" score="2"/>
                    <skill name="Brawl" score="3"/>
                    <skill name="Charm" score="2"/>
                    <skill name="Guile" score="2"/>
                    <skill name="Sleight" score="2"/>
                    <skill name="Stealth" score="2"/>
                    <skill name="Throw" score="2"/>
                </group>

                <group name="Knowledges" type="knowledges">
                    <skill name="Speak own" score="4"/>
                    <skill name="Area lore" score="4"/>
                </group>

                <group name="Combat" type="skills">
                    <skill name="Weapon and shield" score="4"/>
                    <skill name="Longshaft weapon" score="3"/>
                    <skill name="Great weapon" score="3"/>
                    <skill name="Single weapon" score="2"/>
                    <skill name="Battle" score="2"/>
                </group>

                <group name="Other" type="skills">
                    <skill name="Survival" score="1"/>
                    <skill name="First aid" score="2"/>
                    <skill name="Ride" score="3"/>
                    <skill name="Hunting" score="2"/>
                </group>
            </skills>
        </statistics>
    </character>

    <character name="Militia">
        <description>
            <short>
                Militia men are peasant warriors who have had more than
                their fair share of experience fighting in their Lord's
                militia.
            </short>
        </description>

        <statistics xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <skills>
                <group name="Talents" type="talents">
                    <skill name="Athletics" score="2"/>
                    <skill name="Awareness" score="2"/>
                    <skill name="Brawl" score="3"/>
                    <skill name="Charm" score="2"/>
                    <skill name="Guile" score="2"/>
                    <skill name="Sleight" score="2"/>
                    <skill name="Stealth" score="3"/>
                    <skill name="Throw" score="3"/>
                </group>

                <group name="Knowledges" type="knowledges">

                    <skill name="Battle" score="1"/>
                </group>

                <group name="Other" type="skills">
                    <skill name="Survival" score="2"/>
                    <skill name="First aid" score="2"/>
                </group>
            </skills>
        </statistics>
    </character>

    <character name="Rogue">
        <description>
            <short>

<?xml version="1.0"?>

<!--
    Combat manouevres.
 -->

<advantages>



    <advantage name="Power kick" type="manouevre">
        <cost points="2"/>
        <skill name="Brawl"/>
        <description>
            <para>
                This is a <e>slow</e> attack which uses the feet instead of
                the hands to attack with. The attack does extra damage equal
                to the character's brawl skill, and has a reach of 1.
            </para>
        </description>
    </advantage>

    <advantage name="Deadly punch" type="manouevre">
        <cost points="6"/>
        <skill name="Brawl"/>
        <description>
            <para>
                Bare handed attack which does mixed damage, adding brawl
                skill to the damage rolled. Cannot be used with a weapon.
            </para>
        </description>
    </advantage>




</advantages>


